# WordPress base domain (URL completa do WordPress)
WORDPRESS_BASE_URL=https://seu-wordpress.com
NEXT_PUBLIC_WORDPRESS_URL=https://seu-wordpress.com

# WooCommerce API (server-side)
# Se só informar WORDPRESS_BASE_URL, o cliente monta /wp-json/wc/v3 automaticamente
# NEXT_PUBLIC_WOOCOMMERCE_API_URL pode ser deixado em branco
NEXT_PUBLIC_WOOCOMMERCE_API_URL=
WOOCOMMERCE_CONSUMER_KEY=
WOOCOMMERCE_CONSUMER_SECRET=

# Configurações opcionais para desenvolvimento
WORDPRESS_USERNAME=admin
WORDPRESS_PASSWORD=sua-senha

# Webhooks WooCommerce
# Configure este secret igual ao do webhook no WP. Usado para validar HMAC.
WC_WEBHOOK_SECRET=
WC_WEBHOOK_DEBUG=false

# WhatsApp (somente números, ex.: 559182337100)
NEXT_PUBLIC_WHATSAPP_NUMBER=
